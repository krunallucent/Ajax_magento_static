<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

    	<referenceContainer name="content">
            <block   template="Lucent_Hello::product/list.phtml">
            </block>
        </referenceContainer>

       <referenceBlock name="search.result">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Lucent_Hello::result.phtml</argument>
            </action>
        </referenceBlock>

	<referenceBlock name="catalog.compare.sidebar" remove="false"/> 
        <referenceBlock name="wishlist_sidebar" remove="false" />
	<referenceBlock name="page.main.title" remove="true"/>




    </body>
</page>



